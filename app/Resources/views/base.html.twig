<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
		<title>Task App - {% block titulo %}{% endblock %}</title>
		<!-- Bootstrap -->
		{% block stylesheets %}
			<link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
			<link href="{{ asset('assets/css/starter-template.css') }}" rel="stylesheet">
			<link rel="stylesheet" href="{{ asset('assets/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
		{% endblock %}
	</head>
	<body>
		{% block navigation %}
			<nav class="navbar navbar-inverse navbar-fixed-top">
				<div class="container">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand" href="{{ path('homepage') }}">TaskApp</a>
					</div>
					<div id="navbar" class="collapse navbar-collapse">
						<ul class="nav navbar-nav">
							{% if app.user %}
							{% if app.user.username == 'main' %}
							<li {% block menu_usuario %}{% endblock %}><a href="{{ path('lista_usuarios') }}">Usuarios</a></li>
							{% else %}
								<li {% block menu_miusuario %}{% endblock %}><a href="{{ path('editar_usuario', { 'id' : app.user.id }) }}">Editar mis datos</a></li>
								{#<a type="button" class="btn btn-primary" href="{{ path('editar_usuario', { 'id' : app.user.id }) }}">Editar mis datos</a>#}
							{% endif %}
							<li {% block menu_ticket %}{% endblock %}><a href="{{ path('lista_tickets')}}">Tickets</a></li>
							<li {% block menu_cerrar %}{% endblock %}><a href="{{ path('logout')}}">Cerrar Sesi√≥n</a></li>
							{% else %}
								<li {% block menu_log %}{% endblock %}><a href="{{ path('login')}}">Accede al Sistema</a></li>
							{% endif %}
						</ul>
						</div><!--/.nav-collapse -->
					</div>
				</div>
			</nav>
		{% endblock %}
		<div class="starter-template">
			{% block body%} {% endblock %}
		</div>
		{% block javascript %}
			<script src="{{ asset('assets/js/jquery.min.js') }}"></script>
			<script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
		{% endblock %}
		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<!-- Include all compiled plugins (below), or include individual files as needed -->
	</body>
</html>